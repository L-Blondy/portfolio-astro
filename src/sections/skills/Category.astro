---
import type { HTMLAttributes } from 'astro/types';
import IconTriangleSmall from 'src/components/IconTriangleSmall.astro';

interface Props extends HTMLAttributes<'li'> {
   category: string;
   list: string[];
}

const { category, list, ...props } = Astro.props;
---

<li class="flex items-center" {...props}>
   <div class="flex items-center gap-3">
      <IconTriangleSmall
         class="flex-shrink-0 text-primary-light stroke-2 sm:stroke-3"
      />
      <div>
         <h2 class="text-lg md:text-xl font-medium">{category}</h2>
         <p class="opacity-90">{list.join(', ')}</p>
      </div>
   </div>
</li>
