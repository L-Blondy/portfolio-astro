---
import type { HTMLAttributes } from 'astro/types';

interface Props extends HTMLAttributes<'button'> {}

const { class: className = '', ...props } = Astro.props;
---

<button
   class={`h-16 w-16 p-4 flex flex-col items-center justify-between -mr-4 transition-all duration-500 ${className}`}
   {...props}
>
   <div class="h-0.5 my-1 bg-primary-dark w-full"></div>
   <div class="h-0.5 my-1 bg-primary-dark ml-auto w-2/3"></div>
   <div class="h-0.5 my-1 bg-primary-dark ml-auto w-1/3"></div>
</button>
