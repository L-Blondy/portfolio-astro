---
import LinkResume from 'src/components/LinkResume.astro';
---

<section
   class="py-14 md:py-20 text-center md:text-left overflow-hidden bg-bg-dark"
   style={{ boxShadow: 'inset 0 0 100px 0 #00000010' }}
>
   <div class="container flex flex-col md:flex-row md:justify-between gap-6">
      <div class="flex flex-col gap-6 xl:gap-8">
         <div>
            <h1 class="text-3xl md:text-4xl opacity-85 text-white">
               Like what you see?
            </h1>
         </div>
         <div class="text-white opacity-75 text-lg md:text-xl">
            Check out my resume to learn more.
         </div>
      </div>
      <div class="self-center">
         <LinkResume
            class="btn-outlined text-white pl-5 pr-5 leading-6 text-lg opacity-85 mt-1 md:mt-0"
         >
            View Resume
         </LinkResume>
      </div>
   </div>
</section>
