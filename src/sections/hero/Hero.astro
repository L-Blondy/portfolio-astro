---
import { hero } from 'src/cms/hero';
import Container from './Container.astro';
---

<Container>
   <section class="flex flex-col gap-10 py-16 max-w-2xl">
      <h1
         class="order-2 max-[370px]:text-[34px] text-4xl md:text-5xl lg:text-6xl font-semibold text-text-dark -mt-2 sm:-mt-4 flex flex-col gap-1 sm:gap-2"
         set:html={hero.header}
      >
      </h1>

      <h2 class="order-1 text-primary-dark text-lg sm:text-xl font-normal">
         Hi, my name is Laurent
      </h2>

      <p
         class="order-3 text-lg md:text-xl leading-7 md:leading-9 text-text-dark font-normal opacity-90 max-sm:my-4"
      >
         {hero.text}
      </p>

      <div class="order-4 flex gap-3 xs:gap-4 flex-col xs:flex-row z-10">
         <a
            href="#projects"
            class="btn-contained text-lg bg-primary-dark text-bg-dark whitespace-nowrap"
         >
            View projects
         </a>
         <a
            href="#contact"
            class="btn-outlined xs:text-lg text-primary-dark flex-shrink-0"
         >
            Get in touch
         </a>
      </div>
   </section>
</Container>
